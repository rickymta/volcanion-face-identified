# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# ================================
# DATABASE CONFIGURATION
# ================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=face_verification
MONGODB_USERNAME=face_verification_user
MONGODB_PASSWORD=face_verification_password

# ================================
# API CONFIGURATION
# ================================
API_VERSION=v1
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# ================================
# SECURITY CONFIGURATION
# ================================
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_HEADER=X-API-Key
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff
UPLOAD_FOLDER=./temp
TEMP_FILE_RETENTION_HOURS=24

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
ENABLE_RATE_LIMITING=true

# ================================
# ML MODELS CONFIGURATION
# ================================
MODEL_PATH=./models
FACE_DETECTION_MODEL=haarcascade
FACE_RECOGNITION_MODEL=facenet
OCR_ENGINE=tesseract
LIVENESS_MODEL_THRESHOLD=0.5

# ================================
# PERFORMANCE MONITORING
# ================================
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=30
PERFORMANCE_LOG_LEVEL=INFO
SYSTEM_METRICS_INTERVAL=60  # seconds

# ================================
# REDIS CONFIGURATION (Optional)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600  # seconds

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=[%(asctime)s] %(levelname)s in %(module)s: %(message)s

# ================================
# HEALTH CHECK CONFIGURATION
# ================================
HEALTH_CHECK_TIMEOUT=30
DB_HEALTH_CHECK_TIMEOUT=10
EXTERNAL_SERVICE_TIMEOUT=15

# ================================
# DOCKER CONFIGURATION
# ================================
DOCKER_REGISTRY=ghcr.io
IMAGE_TAG=latest
CONTAINER_NAME=face-verification-api

# ================================
# CI/CD CONFIGURATION
# ================================
SONAR_PROJECT_KEY=volcanion-face-identified
SONAR_ORGANIZATION=your-org
CODECOV_TOKEN=your-codecov-token

# ================================
# NOTIFICATION CONFIGURATION
# ================================
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
NOTIFICATION_ENABLED=false

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false
DEBUG_SQL=false
MOCK_EXTERNAL_SERVICES=false
