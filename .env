# Environment Configuration for Face Verification API

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=face_verification_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_HEADER=X-API-Key

# Logging
LOG_LEVEL=INFO
LOG_FILE=volcanion_face_api.log

# ML Model Paths (optional - can be local or cloud)
FACE_DETECTION_MODEL_PATH=models/face_detection
FACE_VERIFICATION_MODEL_PATH=models/face_verification
LIVENESS_MODEL_PATH=models/liveness_detection

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff

# Performance Configuration
WORKERS=1
TIMEOUT=30

# Debug Mode
DEBUG=true
